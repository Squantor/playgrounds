    "version": "0.2.0",
    "configurations": [
        {
            "name": "run sharp LCD example debug",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceFolder}/bin/LPC845M301HI48_sharp_lcd/debug/LPC845M301HI48_sharp_lcd.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "device": "LPC845",
            "BMPGDBSerialPort": "/dev/ttyACM0",
            "runToMain": true,
            "preLaunchCommands": [],
            "preRestartCommands": [
                "set print pretty on",
                "set architecture armv6",
                "file bin/LPC845M301HI48_sharp_lcd/debug/LPC845M301HI48_sharp_lcd.elf",
                //"monitor tpwr enable",
                //"shell sleep 1",
                "monitor swdp_scan",
                "attach 1",
                "set mem inaccessible-by-default off",
                "set {int}0x40048000 = 2",
                "load bin/LPC845M301HI48_sharp_lcd/debug/LPC845M301HI48_sharp_lcd.elf",
                "set {int}0x40048000 = 2",
                "compare-sections",
            ],
            "preLaunchTask": "sharp LCD example",
            "svdFile": "${workspaceFolder}/libMcuLL/svd/nxp/LPC845.svd"
        },
    ]
}