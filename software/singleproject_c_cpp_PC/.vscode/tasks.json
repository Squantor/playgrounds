{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "type": "shell",
      "command": "make clean",
      "group": "build",
      "problemMatcher": "$gcc"
    },
    {
      "label": "build PC example debug configuration",
      "type": "shell",
      "command": "bear -- make CONFIG=debug -j24",
      "group": "build",
      "problemMatcher": "$gcc"
    },
    {
      "label": "build PC example release configuration",
      "type": "shell",
      "command": "bear -- make CONFIG=release -j24",
      "group": "build",
      "problemMatcher": "$gcc"
    },
  ]
}