{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "type": "shell",
      "command": "make clean && make -ftests.mak clean",
      "group": "build",
      "problemMatcher": "$gcc"
    },
    {
      "label": "check",
      "type": "shell",
      "command": "make check && make -ftests.mak check",
      "group": "build",
      "problemMatcher": "$gcc"
    },
    {
      "label": "build minunit C23 template",
      "type": "shell",
      "command": "compiledb make -j25",
      "group": "build",
      "problemMatcher": "$gcc"
    },
    {
      "label": "build minunit C23 tests",
      "type": "shell",
      "command": "compiledb make -ftests.mak -j25",
      "group": "build",
      "problemMatcher": "$gcc"
    },
  ]
}