  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug minunit C++23 template",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/minunit_C++23.elf",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build minunit C++23 template",
    },
